<header class="fixed top-0 left-0 right-0 z-50 transition-all duration-300" id="navbar">
  <div class="container mx-auto px-4">
    <nav class="flex items-center justify-between py-4">
      <!-- Logo -->
      <a href="/" class="flex items-center space-x-2">
        <span class="text-2xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-indigo-700 to-blue-600">WanderWise</span>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        <a href="#destinations" class="text-gray-700 hover:text-indigo-600 font-medium transition-colors">Destinations</a>
        <a href="#experiences" class="text-gray-700 hover:text-indigo-600 font-medium transition-colors">Experiences</a>
        <a href="#tips" class="text-gray-700 hover:text-indigo-600 font-medium transition-colors">Travel Tips</a>
        <a href="#testimonials" class="text-gray-700 hover:text-indigo-600 font-medium transition-colors">Testimonials</a>
      </div>

      <!-- CTA Button -->
      <div class="hidden md:block">
        <a href="#" class="px-5 py-2.5 rounded-lg bg-gradient-to-r from-indigo-600 to-blue-500 text-white font-medium hover:shadow-lg hover:from-indigo-700 hover:to-blue-600 transition-all duration-300">
          Plan Your Trip
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button class="md:hidden text-gray-700 focus:outline-none" id="mobile-menu-button">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </nav>
  </div>

  <!-- Mobile Menu -->
  <div class="md:hidden bg-white shadow-lg absolute w-full left-0 top-full transform -translate-y-full opacity-0 transition-all duration-300 invisible" id="mobile-menu">
    <div class="container mx-auto px-4 py-4 space-y-4">
      <a href="#destinations" class="block text-gray-700 hover:text-indigo-600 font-medium transition-colors py-2">Destinations</a>
      <a href="#experiences" class="block text-gray-700 hover:text-indigo-600 font-medium transition-colors py-2">Experiences</a>
      <a href="#tips" class="block text-gray-700 hover:text-indigo-600 font-medium transition-colors py-2">Travel Tips</a>
      <a href="#testimonials" class="block text-gray-700 hover:text-indigo-600 font-medium transition-colors py-2">Testimonials</a>
      <a href="#" class="block w-full text-center px-5 py-2.5 rounded-lg bg-gradient-to-r from-indigo-600 to-blue-500 text-white font-medium hover:shadow-lg hover:from-indigo-700 hover:to-blue-600 transition-all duration-300">
        Plan Your Trip
      </a>
    </div>
  </div>
</header>

<script>
  // Get elements
  const navbar = document.getElementById('navbar');
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  // Handle scroll for navbar transparency
  window.addEventListener('scroll', () => {
    if (window.scrollY > 10) {
      navbar?.classList.add('bg-white', 'shadow-md');
    } else {
      navbar?.classList.remove('bg-white', 'shadow-md');
    }
  });

  // Initialize navbar state
  if (window.scrollY > 10) {
    navbar?.classList.add('bg-white', 'shadow-md');
  }

  // Mobile menu toggle
  mobileMenuButton?.addEventListener('click', () => {
    if (mobileMenu?.classList.contains('invisible')) {
      // Open menu
      mobileMenu.classList.remove('invisible', '-translate-y-full', 'opacity-0');
      mobileMenu.classList.add('translate-y-0', 'opacity-100');
    } else {
      // Close menu
      mobileMenu?.classList.remove('translate-y-0', 'opacity-100');
      mobileMenu?.classList.add('-translate-y-full', 'opacity-0');
      
      // Add a delay before setting invisible to allow animation to complete
      setTimeout(() => {
        mobileMenu?.classList.add('invisible');
      }, 300);
    }
  });

  // Close mobile menu when clicking on links
  const mobileLinks = mobileMenu?.querySelectorAll('a');
  mobileLinks?.forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.remove('translate-y-0', 'opacity-100');
      mobileMenu?.classList.add('-translate-y-full', 'opacity-0');
      
      setTimeout(() => {
        mobileMenu?.classList.add('invisible');
      }, 300);
    });
  });
</script>
