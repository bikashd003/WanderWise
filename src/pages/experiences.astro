---
import Layout from '../layouts/Layout.astro';
import FloatingNavbar from '../components/FloatingNavbar.astro';
import ExperiencesTimeline from '../components/ExperiencesTimeline.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Unique Experiences | WanderWise">
  <FloatingNavbar />
  
  <main>
    <!-- Hero Section -->
    <section class="pt-32 pb-16 md:pt-40 md:pb-24 bg-gradient-to-b from-indigo-50 to-white relative overflow-hidden">
      <div class="absolute -right-20 top-40 w-80 h-80 rounded-full bg-blue-100/30 blur-3xl"></div>
      <div class="absolute -left-20 bottom-40 w-60 h-60 rounded-full bg-indigo-100/30 blur-3xl"></div>
      
      <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-3xl mx-auto text-center">
          <span class="inline-block py-1 px-3 rounded-full text-xs font-medium uppercase tracking-wider text-indigo-600 bg-indigo-50 mb-4">
            Unforgettable Moments
          </span>
          
          <h1 class="text-4xl md:text-6xl font-bold mb-6 bg-clip-text text-transparent bg-gradient-to-r from-indigo-700 to-blue-600">
            Extraordinary Experiences
          </h1>
          
          <p class="text-lg md:text-xl text-gray-600 mb-8">
            Discover unique activities and authentic cultural encounters that transform ordinary trips into extraordinary journeys.
          </p>
          
          <div class="flex flex-wrap justify-center gap-4">
            <a href="#experiences-timeline" class="px-6 py-3 rounded-lg bg-gradient-to-r from-indigo-600 to-blue-500 text-white font-medium hover:shadow-lg hover:from-indigo-700 hover:to-blue-600 transition-all duration-300">
              Browse Experiences
            </a>
            <a href="#" class="px-6 py-3 rounded-lg bg-white border border-gray-200 text-gray-700 font-medium hover:bg-gray-50 transition-all duration-300">
              Get Personalized Recommendations
            </a>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Categories Section -->
    <section class="py-16 bg-white">
      <div class="container mx-auto px-4">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold mb-4">Find Your Perfect Experience</h2>
          <p class="text-lg text-gray-600 max-w-2xl mx-auto">
            Browse by category to discover experiences that match your interests
          </p>
        </div>
        
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4 md:gap-6">
          <!-- Category Cards -->
          <div class="experience-category group">
            <div class="rounded-xl overflow-hidden aspect-square relative shadow-md transition-all duration-300 group-hover:shadow-xl">
              <img 
                src="https://via.placeholder.com/300x300?text=Cultural" 
                alt="Cultural Experiences" 
                class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent flex items-end p-4">
                <h3 class="text-white font-bold text-lg">Cultural</h3>
              </div>
            </div>
          </div>
          
          <div class="experience-category group">
            <div class="rounded-xl overflow-hidden aspect-square relative shadow-md transition-all duration-300 group-hover:shadow-xl">
              <img 
                src="https://via.placeholder.com/300x300?text=Adventure" 
                alt="Adventure Experiences" 
                class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent flex items-end p-4">
                <h3 class="text-white font-bold text-lg">Adventure</h3>
              </div>
            </div>
          </div>
          
          <div class="experience-category group">
            <div class="rounded-xl overflow-hidden aspect-square relative shadow-md transition-all duration-300 group-hover:shadow-xl">
              <img 
                src="https://via.placeholder.com/300x300?text=Culinary" 
                alt="Culinary Experiences" 
                class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent flex items-end p-4">
                <h3 class="text-white font-bold text-lg">Culinary</h3>
              </div>
            </div>
          </div>
          
          <div class="experience-category group">
            <div class="rounded-xl overflow-hidden aspect-square relative shadow-md transition-all duration-300 group-hover:shadow-xl">
              <img 
                src="https://via.placeholder.com/300x300?text=Nature" 
                alt="Nature Experiences" 
                class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent flex items-end p-4">
                <h3 class="text-white font-bold text-lg">Nature</h3>
              </div>
            </div>
          </div>
          
          <div class="experience-category group">
            <div class="rounded-xl overflow-hidden aspect-square relative shadow-md transition-all duration-300 group-hover:shadow-xl">
              <img 
                src="https://via.placeholder.com/300x300?text=Urban" 
                alt="Urban Experiences" 
                class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent flex items-end p-4">
                <h3 class="text-white font-bold text-lg">Urban</h3>
              </div>
            </div>
          </div>
          
          <div class="experience-category group">
            <div class="rounded-xl overflow-hidden aspect-square relative shadow-md transition-all duration-300 group-hover:shadow-xl">
              <img 
                src="https://via.placeholder.com/300x300?text=Wellness" 
                alt="Wellness Experiences" 
                class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent flex items-end p-4">
                <h3 class="text-white font-bold text-lg">Wellness</h3>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Featured Experience -->
    <section class="py-16 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
          <div class="grid md:grid-cols-2 gap-8 items-center">
            <div class="featured-image">
              <div class="rounded-2xl overflow-hidden shadow-xl">
                <img 
                  src="https://via.placeholder.com/600x800?text=Featured+Experience" 
                  alt="Featured Experience" 
                  class="w-full h-full object-cover"
                />
              </div>
            </div>
            
            <div class="featured-content">
              <span class="inline-block py-1 px-3 rounded-full text-xs font-medium uppercase tracking-wider text-indigo-600 bg-indigo-50 mb-4">
                Featured Experience
              </span>
              
              <h2 class="text-3xl md:text-4xl font-bold mb-4">Northern Lights Photography</h2>
              <p class="text-gray-600 mb-6">
                Guided by professional photographers, capture the dancing aurora in pristine Arctic wilderness. This once-in-a-lifetime experience combines adventure, nature, and photography in one of the world's most spectacular settings.
              </p>
              
              <div class="space-y-4 mb-8">
                <div class="flex items-center">
                  <svg class="w-5 h-5 text-indigo-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                  <span>Troms√∏, Norway</span>
                </div>
                
                <div class="flex items-center">
                  <svg class="w-5 h-5 text-indigo-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <span>5 Hours, Night</span>
                </div>
                
                <div class="flex items-center">
                  <svg class="w-5 h-5 text-indigo-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                  </svg>
                  <span>Small groups (max 8 people)</span>
                </div>
              </div>
              
              <a href="#" class="inline-block px-6 py-3 rounded-lg bg-gradient-to-r from-indigo-600 to-blue-500 text-white font-medium hover:shadow-lg hover:from-indigo-700 hover:to-blue-600 transition-all duration-300">
                Book This Experience
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Experiences Timeline Section -->
    <section id="experiences-timeline" class="py-16">
      <ExperiencesTimeline />
    </section>
    
    <!-- Testimonial -->
    <section class="py-16 bg-indigo-50">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto bg-white rounded-2xl shadow-xl p-8 md:p-12 relative">
          <svg class="absolute top-8 left-8 w-16 h-16 text-indigo-100" fill="currentColor" viewBox="0 0 32 32">
            <path d="M10 8c-2.209 0-4 1.791-4 4v10h10V12h-6c0-1.105 0.895-2 2-2v-2zM22 8c-2.209 0-4 1.791-4 4v10h10V12h-6c0-1.105 0.895-2 2-2v-2z" />
          </svg>
          
          <div class="text-center">
            <p class="text-xl md:text-2xl text-gray-700 mb-8 pt-8">
              "The Northern Lights photography experience was the highlight of our trip. The guides knew exactly where to take us for the best views, and their photography tips helped us capture stunning images. It was magical watching the lights dance across the sky in such a pristine environment."
            </p>
            
            <div class="inline-flex items-center">
              <div class="w-12 h-12 rounded-full overflow-hidden mr-4">
                <img 
                  src="https://via.placeholder.com/100x100?text=S" 
                  alt="Sofia Rodriguez" 
                  class="w-full h-full object-cover"
                />
              </div>
              <div class="text-left">
                <h4 class="font-bold text-gray-900">Sofia Rodriguez</h4>
                <p class="text-gray-600">Barcelona, Spain</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    
    <!-- CTA Section -->
    <section class="py-16 bg-gradient-to-r from-indigo-600 to-blue-500 text-white relative overflow-hidden">
      <div class="absolute inset-0 bg-[url('https://via.placeholder.com/1920x1080?text=Travel+Background')] opacity-10 bg-cover bg-center"></div>
      
      <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-3xl mx-auto text-center">
          <h2 class="text-3xl md:text-4xl font-bold mb-6">Create Your Own Adventure</h2>
          <p class="text-lg mb-8 text-white/90">
            Let us help you design a custom experience tailored to your interests and preferences.
          </p>
          
          <a href="#" class="inline-block px-8 py-4 rounded-lg bg-white text-indigo-600 font-bold hover:bg-opacity-90 transition-all duration-300 shadow-lg transform hover:-translate-y-1">
            Create Custom Experience
          </a>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>

<script>
  // Add scroll reveal animations
  document.addEventListener('DOMContentLoaded', () => {
    // Animate sections on scroll
    const sections = document.querySelectorAll('section');
    
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('animate-fade-in');
          observer.unobserve(entry.target);
        }
      });
    }, { threshold: 0.1 });
    
    sections.forEach(section => {
      section.classList.add('opacity-0');
      observer.observe(section);
    });
    
    // Staggered animation for category cards
    const categories = document.querySelectorAll('.experience-category');
    categories.forEach((category, index) => {
      const el = category as HTMLElement;
      el.style.opacity = '0';
      el.style.transform = 'translateY(20px)';
      
      setTimeout(() => {
        el.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
        el.style.opacity = '1';
        el.style.transform = 'translateY(0)';
      }, 100 * index);
    });
    
    // Animate featured content
    const featuredImage = document.querySelector('.featured-image') as HTMLElement;
    const featuredContent = document.querySelector('.featured-content') as HTMLElement;
    
    if (featuredImage && featuredContent) {
      featuredImage.style.opacity = '0';
      featuredImage.style.transform = 'translateX(-20px)';
      featuredContent.style.opacity = '0';
      featuredContent.style.transform = 'translateX(20px)';
      
      setTimeout(() => {
        featuredImage.style.transition = 'opacity 0.8s ease, transform 0.8s ease';
        featuredContent.style.transition = 'opacity 0.8s ease, transform 0.8s ease';
        featuredImage.style.opacity = '1';
        featuredImage.style.transform = 'translateX(0)';
        featuredContent.style.opacity = '1';
        featuredContent.style.transform = 'translateX(0)';
      }, 300);
    }
  });
</script>

<style>
  .animate-fade-in {
    animation: fadeIn 1s ease forwards;
  }
  
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
