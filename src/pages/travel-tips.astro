---
import Layout from '../layouts/Layout.astro';
import FloatingNavbar from '../components/FloatingNavbar.astro';
import TravelTips from '../components/TravelTips.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Travel Tips & Advice | WanderWise">
  <FloatingNavbar />
  
  <main>
    <!-- Hero Section -->
    <section class="pt-32 pb-16 md:pt-40 md:pb-24 bg-gradient-to-b from-blue-50 to-white relative overflow-hidden">
      <div class="absolute -left-20 top-40 w-80 h-80 rounded-full bg-indigo-100/30 blur-3xl"></div>
      <div class="absolute -right-20 bottom-40 w-60 h-60 rounded-full bg-blue-100/30 blur-3xl"></div>
      
      <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-3xl mx-auto text-center">
          <span class="inline-block py-1 px-3 rounded-full text-xs font-medium uppercase tracking-wider text-indigo-600 bg-indigo-50 mb-4">
            Travel Wisdom
          </span>
          
          <h1 class="text-4xl md:text-6xl font-bold mb-6 bg-clip-text text-transparent bg-gradient-to-r from-indigo-700 to-blue-600">
            Expert Travel Tips
          </h1>
          
          <p class="text-lg md:text-xl text-gray-600 mb-8">
            Discover insider advice, practical guides, and inspiration to enhance your travel experiences.
          </p>
          
          <div class="flex flex-wrap justify-center gap-4">
            <a href="#travel-tips" class="px-6 py-3 rounded-lg bg-gradient-to-r from-indigo-600 to-blue-500 text-white font-medium hover:shadow-lg hover:from-indigo-700 hover:to-blue-600 transition-all duration-300">
              Browse Tips
            </a>
            <a href="#" class="px-6 py-3 rounded-lg bg-white border border-gray-200 text-gray-700 font-medium hover:bg-gray-50 transition-all duration-300">
              Subscribe to Newsletter
            </a>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Featured Articles -->
    <section class="py-16 bg-white">
      <div class="container mx-auto px-4">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold mb-4">Featured Articles</h2>
          <p class="text-lg text-gray-600 max-w-2xl mx-auto">
            Our most popular and helpful travel guides
          </p>
        </div>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          <!-- Featured Article 1 -->
          <div class="featured-article group bg-white rounded-2xl shadow-md hover:shadow-xl transition-all duration-300 overflow-hidden border border-gray-100">
            <div class="relative h-48 overflow-hidden">
              <img 
                src="https://via.placeholder.com/600x400?text=Packing+Tips" 
                alt="Essential Packing Tips" 
                class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
              />
              <div class="absolute top-4 left-4">
                <span class="py-1 px-3 rounded-full text-xs font-medium bg-white/90 text-indigo-700 shadow-sm">
                  Preparation
                </span>
              </div>
            </div>
            
            <div class="p-6">
              <h3 class="text-xl font-bold mb-2 text-gray-900 group-hover:text-indigo-600 transition-colors">Essential Packing Tips for Long-Term Travel</h3>
              <p class="text-gray-600 mb-4">Pack smarter, not harder. Learn how to maximize your luggage space while ensuring you have everything you need.</p>
              <div class="flex items-center justify-between text-sm">
                <span class="text-gray-500">May 5, 2025 • 4 min read</span>
                <a href="#" class="text-indigo-600 font-medium flex items-center group-hover:translate-x-2 transition-transform">
                  Read Article
                  <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </a>
              </div>
            </div>
          </div>
          
          <!-- Featured Article 2 -->
          <div class="featured-article group bg-white rounded-2xl shadow-md hover:shadow-xl transition-all duration-300 overflow-hidden border border-gray-100">
            <div class="relative h-48 overflow-hidden">
              <img 
                src="https://via.placeholder.com/600x400?text=Sustainable+Travel" 
                alt="Sustainable Travel" 
                class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
              />
              <div class="absolute top-4 left-4">
                <span class="py-1 px-3 rounded-full text-xs font-medium bg-white/90 text-indigo-700 shadow-sm">
                  Eco-friendly
                </span>
              </div>
            </div>
            
            <div class="p-6">
              <h3 class="text-xl font-bold mb-2 text-gray-900 group-hover:text-indigo-600 transition-colors">Sustainable Travel: Reducing Your Carbon Footprint</h3>
              <p class="text-gray-600 mb-4">Explore the world responsibly with these eco-friendly travel practices that make a difference.</p>
              <div class="flex items-center justify-between text-sm">
                <span class="text-gray-500">April 20, 2025 • 6 min read</span>
                <a href="#" class="text-indigo-600 font-medium flex items-center group-hover:translate-x-2 transition-transform">
                  Read Article
                  <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </a>
              </div>
            </div>
          </div>
          
          <!-- Featured Article 3 -->
          <div class="featured-article group bg-white rounded-2xl shadow-md hover:shadow-xl transition-all duration-300 overflow-hidden border border-gray-100">
            <div class="relative h-48 overflow-hidden">
              <img 
                src="https://via.placeholder.com/600x400?text=Solo+Travel" 
                alt="Solo Travel Safety" 
                class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
              />
              <div class="absolute top-4 left-4">
                <span class="py-1 px-3 rounded-full text-xs font-medium bg-white/90 text-indigo-700 shadow-sm">
                  Safety
                </span>
              </div>
            </div>
            
            <div class="p-6">
              <h3 class="text-xl font-bold mb-2 text-gray-900 group-hover:text-indigo-600 transition-colors">Solo Travel Safety: Tips for First-Timers</h3>
              <p class="text-gray-600 mb-4">Essential safety advice for those embarking on their first solo adventure.</p>
              <div class="flex items-center justify-between text-sm">
                <span class="text-gray-500">April 8, 2025 • 7 min read</span>
                <a href="#" class="text-indigo-600 font-medium flex items-center group-hover:translate-x-2 transition-transform">
                  Read Article
                  <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Travel Tips Section -->
    <section id="travel-tips" class="py-16">
      <TravelTips />
    </section>
    
    <!-- Travel Resources -->
    <section class="py-16 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold mb-4">Essential Travel Resources</h2>
          <p class="text-lg text-gray-600 max-w-2xl mx-auto">
            Tools and guides to help you plan your perfect trip
          </p>
        </div>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
          <!-- Resource 1 -->
          <div class="resource-card bg-white rounded-xl p-6 shadow-md hover:shadow-lg transition-all duration-300 border border-gray-100">
            <div class="w-12 h-12 bg-indigo-100 rounded-lg flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7" />
              </svg>
            </div>
            <h3 class="text-lg font-bold mb-2">Destination Guides</h3>
            <p class="text-gray-600 mb-4">Comprehensive guides to popular destinations with insider tips.</p>
            <a href="#" class="text-indigo-600 font-medium flex items-center hover:translate-x-2 transition-transform">
              Browse Guides
              <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>
          
          <!-- Resource 2 -->
          <div class="resource-card bg-white rounded-xl p-6 shadow-md hover:shadow-lg transition-all duration-300 border border-gray-100">
            <div class="w-12 h-12 bg-indigo-100 rounded-lg flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="text-lg font-bold mb-2">Budget Calculator</h3>
            <p class="text-gray-600 mb-4">Plan your travel budget with our interactive calculator tool.</p>
            <a href="#" class="text-indigo-600 font-medium flex items-center hover:translate-x-2 transition-transform">
              Calculate Budget
              <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>
          
          <!-- Resource 3 -->
          <div class="resource-card bg-white rounded-xl p-6 shadow-md hover:shadow-lg transition-all duration-300 border border-gray-100">
            <div class="w-12 h-12 bg-indigo-100 rounded-lg flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
              </svg>
            </div>
            <h3 class="text-lg font-bold mb-2">Packing Checklists</h3>
            <p class="text-gray-600 mb-4">Customizable packing lists for different types of trips.</p>
            <a href="#" class="text-indigo-600 font-medium flex items-center hover:translate-x-2 transition-transform">
              Get Checklists
              <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>
          
          <!-- Resource 4 -->
          <div class="resource-card bg-white rounded-xl p-6 shadow-md hover:shadow-lg transition-all duration-300 border border-gray-100">
            <div class="w-12 h-12 bg-indigo-100 rounded-lg flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
            </div>
            <h3 class="text-lg font-bold mb-2">Emergency Contacts</h3>
            <p class="text-gray-600 mb-4">Important contacts and resources for travelers in need of assistance.</p>
            <a href="#" class="text-indigo-600 font-medium flex items-center hover:translate-x-2 transition-transform">
              View Contacts
              <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Newsletter Section -->
    <section class="py-16 bg-gradient-to-r from-indigo-600 to-blue-500 text-white relative overflow-hidden">
      <div class="absolute inset-0 bg-[url('https://via.placeholder.com/1920x1080?text=Travel+Background')] opacity-10 bg-cover bg-center"></div>
      
      <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-3xl mx-auto text-center">
          <h2 class="text-3xl md:text-4xl font-bold mb-6">Get Travel Tips in Your Inbox</h2>
          <p class="text-lg mb-8 text-white/90">
            Subscribe to our newsletter for exclusive travel tips, destination guides, and special offers.
          </p>
          
          <form class="flex flex-col sm:flex-row gap-4 max-w-md mx-auto">
            <input 
              type="email" 
              placeholder="Your email address" 
              class="flex-grow px-4 py-3 rounded-lg focus:outline-none focus:ring-2 focus:ring-yellow-400"
            />
            <button 
              type="submit"
              class="px-6 py-3 bg-yellow-500 hover:bg-yellow-400 text-gray-900 font-bold rounded-lg transition-colors"
            >
              Subscribe
            </button>
          </form>
          
          <p class="text-sm mt-4 text-white/70">
            We respect your privacy. Unsubscribe at any time.
          </p>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>

<script>
  // Add scroll reveal animations
  document.addEventListener('DOMContentLoaded', () => {
    // Animate sections on scroll
    const sections = document.querySelectorAll('section');
    
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('animate-fade-in');
          observer.unobserve(entry.target);
        }
      });
    }, { threshold: 0.1 });
    
    sections.forEach(section => {
      section.classList.add('opacity-0');
      observer.observe(section);
    });
    
    // Staggered animation for featured articles
    const articles = document.querySelectorAll('.featured-article');
    articles.forEach((article, index) => {
      article.style.opacity = '0';
      article.style.transform = 'translateY(20px)';
      
      setTimeout(() => {
        article.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
        article.style.opacity = '1';
        article.style.transform = 'translateY(0)';
      }, 150 * index);
    });
    
    // Staggered animation for resource cards
    const resources = document.querySelectorAll('.resource-card');
    resources.forEach((resource, index) => {
      resource.style.opacity = '0';
      resource.style.transform = 'translateY(20px)';
      
      setTimeout(() => {
        resource.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
        resource.style.opacity = '1';
        resource.style.transform = 'translateY(0)';
      }, 100 * index);
    });
  });
</script>

<style>
  .animate-fade-in {
    animation: fadeIn 1s ease forwards;
  }
  
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
